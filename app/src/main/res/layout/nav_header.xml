<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/whiteheader"
    android:paddingLeft="10dp">


    <TextView
        android:id="@+id/nav_header_pid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textColor="@color/colorSecondary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nav_header_name"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/nav_header_pid"
        android:layout_marginBottom="-3dp"
        android:fontFamily="@font/baloo_bhai"
        android:text=""
        android:textColor="@color/colorSecondary"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_above="@id/nav_header_name"
        android:src="@drawable/userprofile1" />


</RelativeLayout>